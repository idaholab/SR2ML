<!-- This FT models a generic PWR MFW system -->

<opsa-mef>
    <define-fault-tree name="MFW_FT">
    
        <!-- Main gate for MFW system -->
        <define-gate name="TOP">
            <or>
                <gate name="Condensate_pumps"/>
                <gate name="LP_heaters"/>           
                <gate name="Deaerator"/>
                <gate name="FW_pumps"/>             
                <gate name="HP_heater"/>
                <gate name="Control_valves"/>           
            </or>
        </define-gate>
        
        <!-- Gates for sub-systems -->
        
        <define-gate name="Condensate_pumps">
            <or>
                <basic-event name="Condensate_pump_1"/> 
                <basic-event name="Condensate_pump_2"/> 
                <basic-event name="Condensate_pump_3"/> 
                <basic-event name="Condensate_pump_4"/>
            </or>
        </define-gate>
        
        <define-gate name="LP_heaters">
            <or>
                <basic-event name="LP_heater_1"/> 
                <basic-event name="LP_heater_2"/> 
                <basic-event name="LP_heater_3"/> 
                <basic-event name="LP_heater_4"/>
            </or>
        </define-gate>
        
        <define-gate name="Deaerator">
            <or>
                <basic-event name="Deaerator_BE1"/> 
                <basic-event name="Deaerator_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="FW_pumps">
            <or>
                <basic-event name="FW_pump_1"/> 
                <basic-event name="FW_pump_2"/>
                <basic-event name="FW_pump_3"/>
            </or>
        </define-gate>
        
        <define-gate name="HP_heaters">
            <or>
                <basic-event name="HP_heater_1"/> 
                <basic-event name="HP_heater_2"/> 
            </or>
        </define-gate>
        
        <define-gate name="Control_valves">
            <or>
                <basic-event name="regulating_valve"/> 
                <basic-event name="bypass_valve"/> 
            </or>
        </define-gate>
        
        <!--  Component gates  --> 
        
        <define-gate name="Condensate_pump_1">
            <or>
                <basic-event name="Condensate_pump_1_BE1"/> 
                <basic-event name="Condensate_pump_1_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="Condensate_pump_2">
            <or>
                <basic-event name="Condensate_pump_2_BE1"/> 
                <basic-event name="Condensate_pump_2_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="Condensate_pump_3">
            <or>
                <basic-event name="Condensate_pump_3_BE1"/> 
                <basic-event name="Condensate_pump_3_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="Condensate_pump_4">
            <or>
                <basic-event name="Condensate_pump_4_BE1"/> 
                <basic-event name="Condensate_pump_4_BE2"/> 
            </or>
        </define-gate> 

        <define-gate name="LP_heater1">
            <or>
                <basic-event name="LP_heater1_BE1"/> <!-- condensate level   chrome-extension://efaidnbmnnnibpcajpcglclefindmkaj/viewer.html?pdfurl=https%3A%2F%2Fyadda.icm.edu.pl%2Fbaztech%2Felement%2Fbwmeta1.element.baztech-article-BAR0-0068-0059%2Fc%2Fhttpwww_bg_utp_edu_plartdiagnostyka2012szczepanski.pdf&clen=696395-->
                <basic-event name="LP_heater1_BE2"/> 
            </or>
        </define-gate>

        <define-gate name="LP_heater2">
            <or>
                <basic-event name="LP_heater2_BE1"/> <!-- point to LP_heater1_BE1 -->
                <basic-event name="LP_heater2_BE2"/> <!-- point to LP_heater1_BE2 -->
            </or>
        </define-gate>
        
        <define-gate name="LP_heater3">
            <or>
                <basic-event name="LP_heater3_BE1"/> 
                <basic-event name="LP_heater3_BE2"/> 
            </or>
        </define-gate>

        <define-gate name="LP_heater4">
            <or>
                <basic-event name="LP_heater4_BE1"/> 
                <basic-event name="LP_heater4_BE2"/> 
            </or>
        </define-gate>

        <define-gate name="FW_pump_1">
            <or>
                <basic-event name="FW_pump_1_BE1"/> 
                <basic-event name="FW_pump_1_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="FW_pump_2">
            <or>
                <basic-event name="FW_pump_2_BE1"/> 
                <basic-event name="FW_pump_2_BE2"/> 
            </or>
        </define-gate>

        <define-gate name="FW_pump_3">
            <or>
                <basic-event name="FW_pump_3_BE1"/> 
                <basic-event name="FW_pump_3_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="FW_pump_4">
            <or>
                <basic-event name="FW_pump_4_BE1"/> 
                <basic-event name="FW_pump_4_BE2"/> 
            </or>
        </define-gate> 

        <define-gate name="HP_heater_1">
            <or>
                <basic-event name="HP_heater_1_BE1"/> 
                <basic-event name="HP_heater_1_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="HP_heater_2">
            <or>
                <basic-event name="HP_heater_2_BE1"/> 
                <basic-event name="HP_heater_2_BE2"/> 
            </or>
        </define-gate> 

        <define-gate name="regulating_valve">
            <or>
                <basic-event name="regulating_valve_BE1"/> 
                <basic-event name="regulating_valve_BE2"/> 
            </or>
        </define-gate>
        
        <define-gate name="bypass_valve">
            <or>
                <basic-event name="bypass_valve_BE1"/> 
                <basic-event name="bypass_valve_BE2"/> 
            </or>
        </define-gate>
                        
    </define-fault-tree>
</opsa-mef>